<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0" metadata-complete="true">
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
    <welcome-file>index</welcome-file>
  </welcome-file-list>

  <filter>
    <filter-name>Visitfilter</filter-name>
    <filter-class>com.taoyb.simon.common.interceptor.VisitControllerInterceptor</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Visitfilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!--配置DispatcherServlet-->
  <servlet>
    <servlet-name>simon-dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <!--配置springMVC需要加载的配置文件
    springdao.xml,,springweb.xml
    Mybatis->spring->springMVC-->
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:spring/spring-*.xml</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>simon-dispatcher</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>simon-dispatcher</servlet-name>
    <!--默认匹配所有的请求-->
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <!-- session 失效时间设置 -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
